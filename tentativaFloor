
	@Override
	public Integer floor(Integer[] array, Integer x) {
		Integer possibleFloor = array[0];
		Integer floor = binaryFloor(array, x, 0, (array.length) -1);
		return floor;
	}

	public static Integer binaryFloor(Integer[] array, Integer x, int leftIndex, int rightIndex {
		if (leftIndex < rightIndex) {
			int meio = ((rightIndex-leftIndex) / 2) + leftIndex;
			if (array[meio] == x) {
				floor = array[meio];
				//return floor;
			} else if (array[meio] < x) {
				if (array[meio] < x && array[meio] > floor) {
					floor = binaryFloor(array, x, meio + 1, rightIndex, array[meio]);
				}
			} else {
				floor = binaryFloor(array, x, leftIndex, meio -1, floor);
			}
		}
		return floor;
	}

	public static Integer floor2(Integer[] array, Integer x) {
		Integer possibleFloor = array[0];
		Integer floor = binaryFloor(array, x, 0, (array.length) -1, possibleFloor);
		return floor;
	}

	public static void main(String[] args) {
		Integer[] array = {1, 2, 3, 4, 5, 7, 8};
		System.out.println(floor2(array, 3));
	}

